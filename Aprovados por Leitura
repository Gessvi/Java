import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
	        Scanner teclado = new Scanner (System.in);
		System.out.println("Insira o numero 1: ");
		float n1 = teclado.nextFloat();
		
		System.out.println ("Insira o numero 2");
		float n2 = teclado.nextFloat();
		
		System.out.println ("Insira o numero 3: ");
		float n3 = teclado.nextFloat();
		
		System.out.println ("Insira a 4º nota: ");
		float n4 = teclado.nextFloat();
		
		System.out.println ();
		
		float soma = (n1 + n2+n3+n4)/4;
		System.out.println ("Resultado: " + soma);
		
		if (soma >= 7)
		System.out.println ("Aprovado sem recuperação!");
		else if (soma >= 4)
		System.out.println ("Reprovado com recuperação!");
		else
		System.out.println ("Reprovado sem recuperação");
		 
		
		teclado.close();
	}
}
